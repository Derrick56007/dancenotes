<body class="pink darken-3">
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4 style="text-align: center;">New Dance Note</h4>
        <script>
            function checkForm(form) {
                if (form.dn_name.value === "") {
                    M.toast({html: 'Add a name to your note!'});
                    form.dn_name.focus();
                    return false;
                }

                var filename = form.file.value;

                if (filename === "") {
                    M.toast({html: 'Choose a base song!'});
                    form.file.focus();
                    return false;
                }

                var ext = filename.split('.').pop();

                if (ext !== 'mp3' && ext !== 'ogg') {
                    M.toast({html: 'Unsupported audio type!'});
                    M.toast({html: 'Please use mp3 or ogg'});
                    form.file.focus();
                    return false;
                }

                return true;
            }
        </script>
        <form id="dn-form" method="post" enctype="multipart/form-data"
              action="/create_new/{{name}}"
              onsubmit="return checkForm(this)">
            <div class="input-field col s6">
                <input id="dn-name" type="text" name="dn_name">
                <label for="dn-name">Note Name</label>
            </div>
            <div class="row">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Upload</span>
                        <input type="file" name="file"/>
                    </div>

                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text"
                               placeholder="Upload song"/>
                    </div>
                </div>
            </div>
        </form>

    </div>
    <div class="modal-footer">
        <button class="waves-effect waves-light btn" type="submit" form="dn-form" value="Submit">
            Submit
        </button>
    </div>
</div>

<div class='main-container'>
    <div class='holder-title' style="font-size: 45px">
        My Dances
    </div>
    <div>

    <div class='choreo-holder'>
        <div id="create-btn" class="card valign-wrapper">
            <a class="btn-floating btn-large waves-effect waves-light modal-trigger" href="#modal1"
               style="margin: auto;"><i
                    class="material-icons">add</i></a>
        </div>
        {{#each dances}}
            <div class="row" style="align-items: center;">
                <div class="column" , choreo-item card
                ' onclick="event.stopPropagation();openDance('{{author}}', '{{name}}');">
                <img src="image3.png" alt="Smiley face" width="400">
                <div class='choreo-item-bot'>
                    <div class='choreo-item-text'>
                        {{name}}
                    </div>
                    <div class='choreo-item-duration'>
                        {{duration}}
                    </div>
                    <div>
                        <a class="btn-floating btn-small waves-effect waves-light teal choreo-item-btn"
                           onclick="event.stopPropagation();editDance('{{author}}', '{{name}}');"><i
                                class="material-icons">edit</i></a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
